 p1.add(t1);
 p2.add(l2);
 p2.add(t2);
 panel.add(p1);
 panel.add(p2);
 add(Panel, BorderLayout.NORTH);
 void showCenter() {
 JPanel panel = new JPanel();
 JTextArea a = new JTextArea(30, 20)
 a.setText("이 영역에 원의 넓이를 \n계산하는 과정이 나타납니다");
 a.setEditable(false);
 a.setForeground(Color.RED);
 panel.add(a);
 add(panel, BorderLayout.CENTER);
 void showSouth() {
 JPanel panel = new JPanel(new FlowLayout(FlowLayout.CENTER, 10, 10));
 JButton cl = new JButton("계산");
 JComboBox&lt;string&gt; cb = new JcomboBox&lt;&gt;(color);
 JButton re = new JButton("리셋");
 panel.add(cl);
 panel.add(cb);
 panel.add(reset);
 add(panel, BorderLayout.SOUTH);
 public static void main(String[] args) {
 new ComponentDemo();
